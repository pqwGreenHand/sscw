<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.zhixin.zhfz.jzgl.dao.warnInfo.IRuleInfoMapper">
    <resultMap id="IRuleInfoMapper" type="com.zhixin.zhfz.jzgl.entity.RuleInfoEntity">
        <id property="id" column="id"/>
        <result property="ruleName" column="rule_name"/>
        <result property="parentRuleId" column="parent_rule_id"/>
        <result property="isDirectories" column="is_directories"/>
        <result property="className" column="class_name"/>
    </resultMap>
    
    <select id="getRuleAllRoot" resultMap="IRuleInfoMapper" resultType="java.util.List">
    	select * from jz_rule_info
		where parent_rule_id is null		
    </select>
    
    <select id="getRuleChildrenByRuleId" parameterType="java.util.Map" resultMap="IRuleInfoMapper" resultType="java.util.List">
    	select * from jz_rule_info
		where 1=1
		<if test="parentRuleId != null and parentRuleId != ''">
			and parent_rule_id = #{parentRuleId}
		</if>		
    </select>
    
    
</mapper>


