<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.zhixin.zhfz.bacs.dao.blnx.IRecordTypeAnswerMapper">

    <resultMap id="resultMap" type="com.zhixin.zhfz.bacs.entity.RecordTypeAnswerEntity">
        <id property="id" column="id"/>
        <result column="knowledge_q_interrogate_id" property="questionId"/>
        <result column="content" property="content"/>
        <result column="sort_no" property="sortNo"/>
    </resultMap>

    <select id="list" resultMap="resultMap" parameterType="java.util.Map">
        SELECT
            a.*
        FROM
          ba_knowledge_a_interrogate AS a
        <include refid="query_where"/>
		order by a.sort_no
		limit ${pageStart},${rows}
    </select>

     <select id="count" resultType="java.lang.Integer" parameterType="java.util.Map">
		 select count(1) from ba_knowledge_a_interrogate a
         <include refid="query_where"/>
    </select>
    
	<insert id="insert" parameterType="com.zhixin.zhfz.bacs.entity.RecordTypeAnswerEntity">
        INSERT INTO `ba_knowledge_a_interrogate`(`knowledge_q_interrogate_id`, `content`, `sort_no`) VALUES (#{questionId}, #{content}, #{sortNo})
    </insert>
    
    <delete id="delete" parameterType="long">
        delete from ba_knowledge_a_interrogate where id=#{id}
    </delete>

    <delete id="deleteByQuestionId" parameterType="long">
        delete from ba_knowledge_a_interrogate where knowledge_q_interrogate_id=#{id}
    </delete>
    
    <update id="update" parameterType="com.zhixin.zhfz.bacs.entity.RecordTypeAnswerEntity">
        UPDATE `ba_knowledge_a_interrogate` SET `knowledge_q_interrogate_id` = #{questionId}, `content` = #{content}, `sort_no` = #{sortNo} WHERE `id` = #{id}
    </update>

    <sql id="query_where">
        <where>
            <if test="questionId!=null and questionId !=''">
                and a.knowledge_q_interrogate_id = #{questionId}
            </if>
            <if test="content!=null and content !=''">
                and a.content like '%${content}%'
            </if>
        </where>
    </sql>
</mapper>