<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.zhixin.zhfz.bacs.dao.room.IRoomTypeMapper">

    <resultMap id="RoomTypeResultMap" type="com.zhixin.zhfz.bacs.entity.RoomTypeEntity">
      <id column="id" property="id" jdbcType="BIGINT" />
     <result column="name" property="name" jdbcType="VARCHAR" />
    </resultMap>

    <!-- id is same to interface'methmod -->
    <select id="list" resultMap="RoomTypeResultMap" parameterType="java.util.Map">  
        	select * from ba_room_type
        	<where>
        		<if test="name!=null and name !=''">
        			name like '%${name}%'
        		</if>
        		<if test="dataAuth!=null and dataAuth != ''">
        		  ${dataAuth}
                </if>
        	</where>
        	order by id desc
        	limit ${pageStart},${rows}
    </select>
     <select id="count" resultType="java.lang.Integer" parameterType="java.util.Map">  
        	select count(1) from ba_room_type
    </select>
	<insert id="insert" parameterType="com.zhixin.zhfz.bacs.entity.RoomTypeEntity">
            insert into ba_room_type (name,op_pid,op_user_id) values(#{name},#{op_pid},#{op_user_id})
    </insert>
    
    <update id="update" parameterType="com.zhixin.zhfz.bacs.entity.RoomTypeEntity">
           update ba_room_type set name = #{name} where id=#{id}
    </update>
    
    <delete id="delete" parameterType="com.zhixin.zhfz.bacs.entity.RoomTypeEntity">
            delete from ba_room_type where id=#{id}
    </delete>

    <select id="listAllroomType" resultMap="RoomTypeResultMap" parameterType="java.util.Map">
        select * from ba_room_type
        <where>
            <if test="name!=null and name !=''">
                name like '%${name}%'
            </if>
        </where>
    </select>
    
</mapper>