<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.zhixin.zhfz.bacs.dao.law.ILawMapper">
    <resultMap id="BaseResultMap" type="com.zhixin.zhfz.bacs.entity.LawEntity">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="type" property="type" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="chapter" property="chapter" jdbcType="VARCHAR" />
        <result column="content" property="content" jdbcType="VARCHAR" />
        <result column="op_pid" property="op_Pid" jdbcType="VARCHAR" />
        <result column="op_user_id" property="op_User_Id" jdbcType="INTEGER" />
    </resultMap>

    <insert id="insertLaw" parameterType="com.zhixin.zhfz.bacs.entity.LawEntity" keyProperty="id" useGeneratedKeys="true">
            INSERT INTO ba_law (id,type,name,chapter,content,op_pid,op_user_id)
            VALUES (#{id,jdbcType=INTEGER}, #{type,jdbcType=VARCHAR}, #{name,jdbcType=VARCHAR},
      #{chapter,jdbcType=VARCHAR}, #{content,jdbcType=INTEGER},#{op_Pid,jdbcType=VARCHAR},#{op_User_Id,jdbcType=INTEGER})
    </insert>
    
    <select id="list" resultMap="BaseResultMap" parameterType="java.util.Map">
        SELECT * from ba_law
        <where>
            1=1
            <if test="dataAuth!=null and dataAuth!=''">
                and ${dataAuth}
            </if>
            <if test="type!=null and type!=''">
                 and type like '%${type}%'
            </if>
            <if test="name!=null and name!=''">
                 and name like '%${name}%'
            </if>
            <if test="content!=null and content!=''">
                 and content like '%${content}%'
            </if>
        </where>
        limit ${pageStart},${rows}
    </select>

    <select id="count" resultType="java.lang.Integer" parameterType="java.util.Map">
          SELECT count(1) from ba_law
          <where>
              1=1
              <if test="dataAuth!=null and dataAuth!=''">
                  and ${dataAuth}
              </if>
              <if test="type!=null and type!=''">
                  and type like '%${type}%'
              </if>
              <if test="name!=null and name!=''">
                  and name like '%${name}%'
              </if>
              <if test="content!=null and content!=''">
                  and content like '%${content}%'
              </if>
          </where>
    </select>

    <update id="updateLaw" parameterType="com.zhixin.zhfz.bacs.entity.LawEntity">
        UPDATE ba_law SET type = #{type},name = #{name},chapter = #{chapter},content = #{content}
        WHERE id = #{id}
    </update>

    <delete id="removeLaw" parameterType="java.lang.Integer">
        DELETE FROM ba_law WHERE id = #{id}
    </delete>
</mapper>