      <result column="system_name" property="systemName" jdbcType="VARCHAR" />
      <result column="ajmc" property="ajmc" jdbcType="VARCHAR" />
      <result column="ajbh" property="ajbh" jdbcType="VARCHAR" />
  </resultMap>
  <select id="list" resultMap="scheduleResultMap" parameterType="java.util.Map">
    select a.*,IFNULL(b.real_name,a.sender_id) sender_name,c.real_name as receiverName,system_name as systemName
	from xt_schedule a left join xt_user b
	on a.sender_id=b.id
	left join xt_user c
	on a.receiver_id = c.id
	where a.`status`=0
	<if test="receiverId!=null and receiverId!=''">
	   and a.receiver_id = #{receiverId}
	</if>

    <if test="title!=null and title!=''">
       and a.title like '%${title}%'
    </if>

    <if test="content!=null and content!=''">
       and a.content like '%${content}%'
    </if>

    <if test="systemName!=null and systemName!=''">
      and a.system_name = #{systemName}
    </if>
      limit ${pageStart},${rows}
  </select>

    <select id="count" resultType="java.lang.Integer" parameterType="java.util.Map">
        select count(1)
        from xt_schedule a left join xt_user b
        on a.sender_id=b.id
        where a.`status`=0
        <if test="receiverId!=null and receiverId!=''">
            and a.receiver_id = #{receiverId}
        </if>

        <if test="title!=null and title!=''">
            and a.title like '%${title}%'
        </if>

        <if test="content!=null and content!=''">
            and a.content like '%${content}%'
        </if>

        <if test="systemName!=null and systemName!=''">
            and a.system_name = #{systemName}
        </if>
    </select>
  
  <select id="listhistory" resultMap="scheduleResultMap" parameterType="java.util.Map">
      select a.*,b.real_name sender_name from xt_schedule a left join user b on a.sender_id=b.id
	  where a.`status`=1
	  <if test="receiverId!=null and receiverId!=''">
	      and a.receiver_id = #{receiverId}
	  </if>
	  <if test="senderName!=null and senderName!=''">
          and b.real_name like '%${senderName}%'
      </if>
      <if test="title!=null and title!=''">
          and a.title like '%${title}%'
      </if>
      <if test="status!=null and status!=''">
          and a.status = #{status}
      </if>
      order by a.id desc 
      limit ${pageStart},${rows}
  </select>
  
  <select id="listhistorycount" resultType="java.lang.Integer" parameterType="java.util.Map">
      select count(1) from xt_schedule a left join user b on a.sender_id=b.id
	  where a.`status`=1
	  <if test="receiverId!=null and receiverId!=''">
	      and a.receiver_id = #{receiverId}
	  </if>
	  <if test="senderName!=null and senderName!=''">
          and b.real_name like '%${senderName}%'
      </if>
      <if test="title!=null and title!=''">
          and a.title like '%${title}%'
      </if>
      <if test="status!=null and status!=''">
          and a.status = #{status}
      </if>
  </select>
  
  <insert id="insert" parameterType="com.zhixin.zhfz.common.entity.ScheduleEntity">
