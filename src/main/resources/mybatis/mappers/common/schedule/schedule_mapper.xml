    <select id="isSchedule" parameterType="com.zhixin.zhfz.common.entity.ScheduleEntity" resultType="java.lang.Integer">
        select count(1) from xt_schedule
        where sender_id = #{senderId} and receiver_id = #{receiverId} and title = #{title}
        and content = #{content}  and status = 0;
    </select>
    
    <update id="changeScheduleOvertime">
    	update xt_schedule set status =1,end_time=now() where TIMEDIFF(now(),start_time) &gt;=240000
    </update>
    
    <delete id="cleanSchedule">  
            delete from xt_schedule where TIMEDIFF(now(),start_time) &gt;=2400000
    </delete>


    <update id="updateScheduleById" parameterType="com.zhixin.zhfz.common.form.ScheduleForm">
    	update xt_schedule set status =1,handler_time=now(),handler_content=#{handlerContent} where id=#{id}
    </update>


