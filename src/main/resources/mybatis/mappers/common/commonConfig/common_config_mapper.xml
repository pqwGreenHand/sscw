<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhixin.zhfz.common.dao.commonConfig.ICommonConfigMapper">

	<resultMap id="commonConfigResultMap" type="com.zhixin.zhfz.common.entity.CommonConfigEntity">
		<id property="id" column="id" />
		<result property="type" column="type" />
		<result property="desc" column="desc" />
		<result property="isEnable" column="is_enable" />
		<result column="op_pid" property="op_Pid" jdbcType="VARCHAR" />
		<result column="op_user_id" property="op_User_Id" jdbcType="INTEGER" />
	</resultMap>

	<select id="list" resultMap="commonConfigResultMap" parameterType="java.util.Map">
		select * from xt_common_config a
		where 1=1
		<if test="dataAuth!=null and dataAuth!=''">
			and ${dataAuth}
		</if>
		<if test="type !=null and type !=''">
			and a.type like "%${type}%"
		</if>
		<if test="desc !=null and desc !=''">
			and a.desc like "%${desc}%"
		</if>
		<if test="isEnable !=null and isEnable !=''">
			and a.is_enable = #{isEnable}
		</if>		
	</select>


	<select id="count" resultType="java.lang.Integer" parameterType="java.util.Map">
		select count(1) from xt_common_config a
		where 1=1
		<if test="type !=null and type !=''">
			and a.type like "%${type}%"
		</if>
		<if test="desc !=null and desc !=''">
			and a.desc like "%${desc}%"
		</if>
		<if test="isEnable !=null and isEnable !=''">
			and a.is_enable = #{isEnable}
		</if>
	</select>
	<insert id="insert" parameterType="com.zhixin.zhfz.common.entity.CommonConfigEntity"
		useGeneratedKeys="true" keyProperty="id">
		insert into xt_common_config 
		(type,`desc`,is_enable,op_pid,op_user_id) values(#{type},#{desc},#{isEnable},#{op_Pid},#{op_User_Id})
	</insert>

	<delete id="delete" parameterType="int">
		delete from xt_common_config
		where id=#{id}
	</delete>

	<update id="update" parameterType="com.zhixin.zhfz.common.entity.CommonConfigEntity">
		update xt_common_config a set
		a.type = #{type},a.desc = #{desc},a.is_enable = #{isEnable}
		where a.id=#{id}
	</update>

</mapper>