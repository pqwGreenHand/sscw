<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.zhixin.zhfz.bacsapp.dao.authIndex.IAuthIndexMapper">

    <resultMap id="resultMap" type="com.zhixin.zhfz.bacsapp.entity.AuthIndexEntity">
        <!--<id column="id" property="id" jdbcType="INTEGER" />-->
        <result column="name" property="name" />
        <result column="method" property="method" />
        <result column="url" property="url"/>
        <result column="icon" property="icon"/>
    </resultMap>


    <select id="selectAuthIndexList" resultMap="resultMap" parameterType="java.util.Map">
		select a.title AS `name`,a.js_method AS method,a.url,a.icon from xt_authority AS a join xt_authority as b on a.parent_id = b.id where b.title = '${name}'
    </select>

</mapper>