<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.1.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

	<!-- 使用注解方式管理service -->

	<context:annotation-config />
	<!-- 需要扫描带注解类的包 -->
	<context:component-scan base-package="com.zhixin.zhfz.**.services" />

	<bean name="CommonLoginController" class="com.zhixin.zhfz.common.controller.common.LoginController"/>

	
	<!-- 添加拦截器 begin -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**/*.do" />
			<bean class="com.zhixin.zhfz.common.filter.UserAuthorityInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>
	<!-- 添加拦截器 end -->
</beans>