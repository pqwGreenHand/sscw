<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
					http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="annotationPropertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<!-- <value>classpath:jdbc_webdb1.properties</value> <value>classpath:jdbc_webdb2.properties</value> -->
				<value>classpath:jdbc_zhfz_mysql.properties</value>
				<value>classpath:jdbc_zhfz_oracle.properties</value>
				<value>classpath:jdbc_sjhc_orcal.properties</value>
				<value>classpath:jdbc_bazx_mysql.properties</value>
				<value>classpath:jdbc_zfba_mysql.properties</value>
			</list>
		</property>
	</bean>

	<bean id="propertyPlaceholderConfigurer" class="com.zhixin.zhfz.common.utils.PropertyUtil">
		<property name="ignoreResourceNotFound" value="true" />
		<property name="locations">
			<list>
				<value>classpath:web_default.properties</value>
				<value>classpath:conf.properties</value>
				<!--有用，勿删-->
				<value>classpath:jdbc_zhfz_mysql.properties</value>
				<value>classpath:jdbc_zhfz_oracle.properties</value>
				<value>classpath:jdbc_bazx_mysql.properties</value>
				<value>classpath:jdbc_zfba_mysql.properties</value>
			</list>
		</property>
	</bean>

</beans>